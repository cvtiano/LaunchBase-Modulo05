{% extends "Admin/admin-layout.njk" %}

{% block content %}
<main class="site-content">
    <section>
        <div class="manage-head">
            <h2>Gerenciar receitas</h2>
            <div>
                <a href="/admin/recipes/create">
                    <button 
                        type="submit" 
                        form="recipe_form" 
                        class="btn" id="save"                    
                        >                    
                        Nova receita
                    </button>
                </a>                
            </div>
        </div>
        <div class="recipes-container">
            {% for item in items %}
            <div class="recipe-list">
                <div id="rec_img">
                    <img src="{{item.image}}" alt="{{item.title}}">
                </div>
                <div id="rec_text">
                    <h3>{{item.title}}</h3>
                    <p>{{item.author}}</p>
                    <a href="/admin/recipes/{{item.id}}">Visualizar</a>
                </div>
            </div>
            {% endfor %}
        </div>
    </section>
</main>


{% endblock content %}