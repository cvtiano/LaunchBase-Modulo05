{% extends "Admin/admin-layout.njk" %}

{% block content %}
<main class="site-content">
  <section>
    <div class="manage-head">
        <h2>Gerenciar receitas</h2>
        <div>
            <a href="/admin/recipes/create">
                <button 
                    type="submit" 
                    form="recipe_form" 
                    class="btn" id="save"                    
                    >
                    Nova receita
                </button>
            </a>                
        </div>
    </div>
    <div class="recipes-container">
      {% for recipe in recipes %}
      <div class="recipe-list">
        <div id="rec_img">
            <img src="{{recipe.image}}" alt="{{recipe.title}}">
        </div>
        <div id="rec_text">
          <h3>{{recipe.title}}</h3>
          <p>por {{recipe.chef_name}}</p>
          <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
        </div>
      </div>
      {% endfor %}
    </div>
  </section>
</main>

{% endblock content %}