
    <div>
        <p>Nome da receita</p>
        <input
            type="text"
            name="title"
            value="{{ recipe.title }}"
        >
    </div>

    <div>
        <p>Autor da receita</p>
        <select name="chef" id="" placeholder="Selecione um chef">
            %{% for chef in chefOptions %}
            <option value={{chef.id}} {% if recipe.chef_id == chef.id %} selected {% endif %}>
                {{chef.name}}
            </option>
            {% endfor %}
        </select>
    </div>

    <div>
        <p>Imagem da receita</p>
        <input 
            type="url"
            name="image"
            placeholder="http://..."
            value="{{ recipe.image }}"
        >
    </div>

    <div id="ingredients">
        <p>Ingredientes</p>
        {% for ingredients in recipe.ingredients %}
        <div class="ingredient">
            <input 
                type="text" 
                name="ingredients[]"
                placeholder="Ex: 2 xícaras de açúcar."
                value="{{ ingredients }}"
            />
        </div>
        {% else %}
        <div class="ingredient">
            <input 
                type="text" 
                name="ingredients[]"
                placeholder="Ex: 2 xícaras de açúcar."
            />
        </div>
        {% endfor %}
    </div>
    <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>

    <div id="preparations">
        <p>Modo de preparo</p>
        {% for preparation in recipe.preparation %}
        <div class="preparation">
            <input
                type="text" 
                name="preparation[]"
                placeholder="Ex: Misture todos os ingredientes muito bem..."
                value="{{ preparation }}"
            />
        </div>
        {% else %}
        <div class="preparation">
            <input
                type="text" 
                name="preparation[]"
                placeholder="Ex: Misture todos os ingredientes muito bem..."
            />
        </div>
        {% endfor %}
    </div>
    <button type="button" class="add-preparation">Adicionar novo passo</button>

    <p>Informações adicionais</p>        
    <textarea
        name="information"
        value="">{{ recipe.information|nl2br }}
    </textarea>