{% extends "Admin/admin-layout.njk" %}


{% block content %}
<section>
    <div id="form_head">
        <h2>Receita: {{item.title}}</h2>
        <div>
            <a href="/admin/recipes/{{ item.id }}/edit">
                <button 
                    type="submit" 
                    form="recipe_form" 
                    class="btn" id="save"                    
                    >                    
                    Editar receita
                </button>
            </a> 
        </div>
    </div>

    <div class="recipe">
        <div class="recipe-header">
            <img src="{{item.image}}" alt="{{item.title}}">
            <h1>{{item.title}}</h1>
            <h2>por {{item.author}}</h2>
        </div>

        <div class="recipe-content">
            <div class="topic">
                <div class="recipe-item">
                    <h3>Ingredientes</h3>                
                </div>
                <div class="topic-content" id="ingredients">
                    <ul>
                        {% for ingredient in item.ingredient %}
                        <li>- {{ingredient}}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

            <div class="topic">
                <div class="recipe-item">
                    <h3>Modo de preparo</h3>
                </div>            
                <div class="topic-content" id="preparation">
                    <ul>
                        {% for preparation in item.preparation %}
                        <li>- {{preparation}}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

            <div class="topic">
                <div class="recip-item">
                    <h3>Informações adicionais</h3>
                </div>            
                <div class="topic-content" id="info">
                    <p>{{item.plus_info|nl2br}}</p>
                </div>
            </div>
        </div>
    </div>
</section>

    <script src="/scripts.js"></script>
{% endblock content %} 