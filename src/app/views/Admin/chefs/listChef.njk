{% extends "Admin/admin-layout.njk" %}

{% block content %}

<main class="site-content">
  <section>
    <div class="manage-head">
      <h2>Gerenciar chefs</h2>
      <div>
        <a href="/admin/chefs/create">
          <button 
              type="submit" 
              form="chefs_form" 
              class="btn" id="save"                    
              >                    
              Novo chef
          </button>
        </a>                
      </div>
    </div>
    <div class="main-chefs">
      {% for chef in chefs %}
        <div id="{{chefs.id}}">
          <div class="chef">
            <a href="/chefs/{{chefs.index}}">
              <img src={{chef.avatar_url}} alt={{chef.name}}>
            </a>
            <div>
              <div class="most-content">
                <p>{{chef.name}}</p>
                <div class="most-author">
                  <p>{{chef.total_recipes}} Receitas</p>
                </div>
              </div>
              <div>
                <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </section>
</main>

{% endblock %}