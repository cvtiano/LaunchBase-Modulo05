{% extends "Users/layout.njk" %}

{% block head %}
    <title>{{item.title}}</title>
{% endblock %}

{% block content %}

<div class="recipe">
    <div class="recipe-header">
        <img src="{{item.image}}" alt="{{item.title}}">
        <h1>{{item.title}}</h1>
        <h2>por {{item.author}}</h2>
    </div>

    <div class="recipe-content">
        <div class="topic">
            <div class="recipe-item">
                <h3>Ingredientes</h3>
                <a class="show-hide">ESCONDER</a>
            </div>
            <div class="topic-content" id="ingredients">
                <ul>
                    {% for ingredient in item.ingredients %}
                    <li>- {{ingredient}}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div id="topic">
            <div class="recipe-item">
                <h3>Modo de preparo</h3>
                <a class="show-hide">ESCONDER</a>
            </div>            
            <div class="topic-content" id="preparation">
                <ul>
                    {% for preparation in item.preparation %}
                    <li>- {{preparation}}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="topic">
            <div class="recipe-item">
                <h3>Informações adicionais</h3>
                <a class="show-hide">ESCONDER</a>
            </div>            
            <div class="topic-content" id="info">
                <p>{{item.information|nl2br}}</p>
            </div>
        </div>
    </div>
</div>
    <script src="/scripts.js"></script>
    <script src="/utils.js"></script>
{% endblock content %}